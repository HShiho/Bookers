<p></p>

<h1>Editing Book</h1>

<%= render 'error_messages' %>

<%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
  <div class="field">
    <label>Title</label>
    <br><%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <br><%= f.text_area :body %>
  </div>
  <div class="action"><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to 'Show',book_path(@book.id) %>
<span>|</span>
<%= link_to 'Back','/books' %>