<%= render 'flash_notice' %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th class="thead" colspan="3"></th>
    <tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
          <td><%= link_to 'Show',book_path(book.id) %></td>
          <td><%= link_to 'Edit',edit_book_path(book.id) %></td>
          <td><%= link_to 'Destroy',book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: @book,url: '/books',method: :post do |f| %>
  <h2>New book</h2>

  <%= render 'error_messages' %>

  <div class="field">
    <div>
      <label>Title</label>
    </div>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <div>
      <label>Body</label>
    </div>
    <%= f.text_area :body %>
  </div>
  <div class="action"><%= f.submit 'Create Book' %></div>
<% end %>